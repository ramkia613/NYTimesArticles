<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme.NoTitle" parent="MaterialTheme">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="MaterialTheme" parent="AppTheme">
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextView">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Italic">
        <item name="android:textStyle">italic</item>
    </style>
</resources>
